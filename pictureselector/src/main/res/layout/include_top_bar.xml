<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ps_top_bar_height"
    android:background="@color/ps_color_primary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView  android:id="@+id/top_bar_iv_back"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_back_press"
        app:srcCompat ="@drawable/ic_arrow_back"
        tools:ignore="VectorDrawableCompat" />

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="#2E2E32"
        android:layout_toRightOf="@+id/top_bar_iv_back"
        android:layout_toEndOf="@+id/top_bar_iv_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/top_bar_iv_back"
        android:layout_toEndOf="@id/top_bar_iv_back"
        android:layout_marginLeft="12dp"
        android:text="图片"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="18sp"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/top_bar_btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_top_ok"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:minHeight="30dp"
        android:minWidth="48dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:text="完成(1/9)"/>


</RelativeLayout>
